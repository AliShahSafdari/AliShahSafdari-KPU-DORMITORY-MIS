<!-- Content -->
<div class="content-area py-1">
    <div class="container-fluid">
        <!-- <h4>نمایش لیست ادخالات</h4>
        <ol class="breadcrumb no-bg mb-1">
            <li class="breadcrumb-item"><a href="index.html">خانه</a></li>
            <li class="breadcrumb-item"><a href="/goods-management">مدیریت جنسی</a></li>
            <li class="breadcrumb-item active">نمایش لیست ادخالات</li>
        </ol> -->
        <% if(entry.length>0){ %>
        <div class="box box-block bg-white table-responsive">
            <table class="table table-striped table-bordered dataTable" id="table-2">
                <thead>
                    <tr>
                        <th>شماره</th>
                        <th> نام جنس</th>
                        <th>تعداد جنس</th>
                        <th>قیمت جنس </th>
                        <th>حواله وارده</th>
                        <th>از جایکه اخذ شده</th>
                        <th>تاریخ</th>
                        <th>قیمت مجوعی</th>
                        <% if(user.position!=="آمر لیلیه" ){ %>

                        <th>نمایش</th>
                        <%}%>
                    </tr>
                </thead>
                <tbody>
                    <% let i=1;%>

                        <% for(let entr of entry){ %>
                    <tr>

                        <td>
                            <%= i++%>
                        </td>

                        <td>
                            <%= entr.goods_fk.name %>
                        </td>
                        <td>
                            <%= entr.quantity %>
                        </td>
                        <td>
                            <%= entr.price %>
                        </td>
                        <td>
                            <%= entr.entryDocument_fk.docNum %>
                        </td>
                        <td>
                            <%= entr.placeFromRecieved %>
                        </td>
                        <td>
                            <%= entr.dates %>
                        </td>

                        <td>
                            <%= (entr.price* entr.quantity)%>
                        </td>
                        <% if(user.position!=="آمر لیلیه" ){ %>
                        <td>
                            <a href="/goods-management/show-oneEntries/<%=entr._id %>" id="show_student">
                                <span class="fa fa-eye"></span>
                            </a>
                        </td>
                        <%}%>                       
                    </tr>
                    <% } %>
                        </tbody>
            </table>
        </div>


        <% }else{ %>
        <div class="m-2">
            <h2 class="center">در حال حاضر هیج ادخالات ثبت نشد است</h2>
        </div>
        <% } %>
    </div>
</div>
</div>

<script>
    function sendId(ev) {
        let editRout = "/goods-management/edit-entries/" + ev.currentTarget.getAttribute("href");
        let deleteRout = "/goods-management/delete-entries/" + ev.currentTarget.getAttribute("href");

        console.log(editRout);
        document.getElementById("edit").setAttribute("href", editRout);

        console.log(deleteRout);
        document.getElementById("delete").setAttribute("href", deleteRout);

    }
</script>