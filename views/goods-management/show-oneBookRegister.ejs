<!-- Content -->
<div class="content-area py-1">
    <div class="container-fluid">
        <h4>نمایش لیست یک کتاب</h4>
        <ol class="breadcrumb no-bg mb-1">

            <li class="breadcrumb-item"><a href="index.html">خانه</a></li>
            <li class="breadcrumb-item"><a href="/goods-management">مدیریت جنسی</a></li>
            <li class="breadcrumb-item active">نمایش لیست یک کتاب</li>
        </ol>


        <% if(bookRegisters.length>0){ %>
        <div class="box box-block bg-white">
            <div class=" col-xs-12">
                <div class="col-xs-11">
                </div>
                <div class="col-xs-1">
                    <a href="/goods-management/show-bookRegister">
                        <span class=" fa fa-arrow-circle-o-left fa-2x " style="color:rgb(31, 219, 31);"></span>
                    </a>
                </div>
            </div>
            <br>
            <br>
            <table class="table table-striped table-bordered dataTable" id="table-2">
                <thead>
                    <tr>
                        <th> نمبر</th>
                        <th> نام کتاب</th>
                        <th>جلد</th>
                        <th>صفحه</th>
                        <th>سال</th>
                        <% if (user.position === "مدیر جنسی") { %>
                        <th>ویرایش</th>
                        <%}%>       
                    </tr>
                </thead>
                <tbody>
                    <% let i =1;%>
                        <% for(let bookRegister of bookRegisters){ %>
                    <tr>
                        <td>
                            <%=i++%>
                        </td>
                        <td>
                            <%= bookRegister.bookName %>
                        </td>
                        <td>
                            <%= bookRegister.skin %>
                        </td>
                        <td>
                            <%= bookRegister.page %>
                        </td>
                        <td>
                            <%= bookRegister.year %>
                        </td>
                        <% if (user.position === "مدیر جنسی") { %>
                        <td>
                            <a href="/goods-management/edit-bookRegister/<%=bookRegister._id%>" id="show_student">
                                <span class=" fa fa-edit" style="color:rgb(31, 219, 31);"></span> </a>
                        </td>
                        <%}%>
                    </tr>
                    <% } %>
                        </tbody>
            </table>
        </div>
        <!-- edit and delete chooseing modal -->
        <div class="modal animated bounceInUp small-modal" id="choose" tabindex="-1" role="dialog"
            aria-labelledby="mySmallModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-footer">
                        <a href="" data-toggle="modal" data-target="#confirm" class="btn btn-danger col-md-5">حذف</a>
                        <span class="col-md-3"></span>
                        <a href="" id="edit" class="btn btn-primary col-md-6" style="margin-left: 0px;">ویرایش</a>
                    </div>
                </div>
            </div>
        </div>

        <% }else{ %>
        <div class="m-2">
            <h2 class="center">در حال حاظر هیچ کتاب توسط شما در دیتابس ثبت نشده است</h2>
        </div>
        <% } %>
    </div>
</div>