<!-- Content -->
<div class="content-area py-1">
    <div class="container-fluid">

        <!-- <%- include("../includes/messages") %> -->
        <div class="box box-block bg-white table-responsive">
            <div class="row">
                <div class="col-xs-4">
                    <button class="btn btn-primary inline" data-toggle="modal" data-target=".large-modal">
                        <li class="fa "> آدرس کتاب ثبت</li>
                    </button>
                    <button class="btn btn-primary inline" data-toggle="modal" data-target=".large-modal2">
                        <li class="fa "> مشحضات محصل</li>
                    </button>
                </div>
                <div class="col-xs-6">
                    <h3 class="mb-1">نمایش مشخصات البسه ( <%=studentKit.students_fk.name%>)</h3>
                </div>
                <div class="col-xs-1 pull-left">
                    <a href="/goods-management/show-studentKits">
                        <span class=" fa fa-arrow-circle-o-left fa-2x" style="color:rgb(31, 219, 31);"></span>
                    </a>
                </div>
            </div>
            <br>
            <table class="table table-striped table-bordered dataTable" id="">

                <thead>
                    <tr>
                        <th>دوشک</th>
                        <th>بالشت</th>
                        <th>روجائی</th>
                        <th>کمپل</th>
                        <th>جپرکت</th>
                        <th>آینه روی</th>
                        <th>پرده</th>
                        <th>فرش</th>
                        <th>میز</th>
                        <th>چوکی</th>
                        <th>سال</th>
                        <th>قیمت مجموعی</th>
                        <th>ملاحضات</th>
                        <% if (user.position === "مدیر جنسی") { %>
                        <th>ویرایش</th>
                        <th>حذف</th>
                        <th>ریست</th>
                        <%}%>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td> <%=studentKit.mattress%> </td>
                        <td><%=studentKit.pillow%></td>
                        <td><%=studentKit.coverlet%></td>
                        <td><%=studentKit.quilt%></td>
                        <td><%=studentKit.bed%></td>
                        <td><%=studentKit.mirror%></td>
                        <td><%=studentKit.windowShade%></td>
                        <td><%=studentKit.carpet%></td>
                        <td><%=studentKit.table%></td>
                        <td><%=studentKit.chair%></td>
                        <td><%=studentKit.Dates%></td>
                        <td><%=same%></td>
                        <%if(same>0){%>
                        <td>باقی</td>
                        <%}else{%>
                        <td>رسید</td>
                        <%}%>
                        <% if (user.position === "مدیر جنسی") { %>
                        <td style="text-align: center;">
                            <a href="/goods-management/edit-oneStudentKit/<%=studentKit._id%>"">
                                    <span class=" fa fa-edit" style="color:rgb(31, 219, 31);"></span>
                            </a>
                        </td>
                        <td style="text-align: center;">
                            <a data-toggle="modal" data-target="#confirm" onclick="sendId(event)"
                                href="<%=studentKit._id%>">
                                <span class="fa fa-trash-o" style="color:red"></span>
                            </a>
                        </td>
                        <td style="text-align: center;">
                            <a data-toggle="modal" data-target="#confirm1" onclick="sendId(event)"
                                href="<%=studentKit._id%>">
                                <span class="fa fa-undo" style="color:blue"></span>
                            </a>
                        </td>

                        <%}%>

                    </tr>
                </tbody>
            </table>
        </div>
    

        <!-- deleting confirmation modal -->
        <div class="modal animated bounceInUp small-modal" id="confirm" tabindex="-1" role="dialog"
            aria-labelledby="mySmallModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                        <h4 class="modal-title" id="mySmallModalLabel">هشدار!!!</h4>

                    </div>
                    <div class="modal-body">
                        آیا از حذف اطلاعات این جنس مطمعین هستید؟
                    </div>
                    <div class="modal-footer">
                        <a href="" id="delete" class="btn btn-danger col-md-5" style="margin-right: 0px;">بله</a>
                        <span class="col-md-2"></span>
                        <a href="" class="btn btn-primary col-md-5" style="margin-left: 0px;">خیر</a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="modal animated bounceInUp small-modal" id="confirm1" tabindex="-1" role="dialog"
            aria-labelledby="mySmallModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                        <h4 class="modal-title" id="mySmallModalLabel">هشدار!!!</h4>

                    </div>
                    <div class="modal-body">
                        آیا از رسیت اطلاعات این جنس مطمعین هستید؟
                    </div>
                    <div class="modal-footer">
                        <a href="" id="reseting" class="btn btn-danger col-md-5" style="margin-right: 0px;">بله</a>
                        <span class="col-md-2"></span>
                        <a href="" class="btn btn-primary col-md-5" style="margin-left: 0px;">خیر</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
</div>

<script>
    function sendId(ev) {
        let deleteRout = "/goods-management/delete-oneStudentKit/" + ev.currentTarget.getAttribute("href");
        document.getElementById("delete").setAttribute("href", deleteRout);

        let resetRout = "/goods-management/reset-oneStudentKit/" + ev.currentTarget.getAttribute("href");
        document.getElementById("reseting").setAttribute("href", resetRout);
    }
</script>
