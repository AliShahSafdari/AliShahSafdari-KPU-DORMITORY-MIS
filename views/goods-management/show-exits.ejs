<!-- Content -->
<div class="content-area py-1">
    <div class="container-fluid">
        <!-- <h4>نمایش لیست اخراجات</h4>
        <ol class="breadcrumb no-bg mb-1">
            <li class="breadcrumb-item"><a href="index.html">خانه</a></li>
            <li class="breadcrumb-item"><a href="/goods-management">مدیریت جنسی</a></li>
            <li class="breadcrumb-item active">نمایش لیست اخراجات</li>
        </ol> -->

        <% if(exit.length>0){ %>
        <div class="box box-block bg-white table-responsive">
            <table class="table table-striped table-bordered dataTable" id="table-2">
                <thead>
                    <tr>
                        <th>شماره</th>
                        <th> نام جنس</th>
                        <th>مقدار ویا تعداد جنس</th>
                        <th>قیمت</th>
                        <th>حواله صادره</th>
                        <th>بجایکه جنس فرستاده شده</th>
                        <th>تاریخ</th>
                        <th>قیمت مجوعی</th>
                        <% if(user.position!=="آمر لیلیه" ){ %>

                        <th>نمایش</th>
                        <%}%>
    
                    </tr>
                </thead>
                <tbody>
                    <% let i=1;%>

                        <% for(let e of exit){ %>
                    <tr>
                        <td><%=i++%></td>
                        <td>
                            <%= e.goods_fk.name%>
                        </td>
                        <td>
                            <%= e.quantity %>
                        </td>
                        <td>
                            <%= e.price %>
                        </td>
                        <td>
                            <%= e.exportDocument_fk.docSequenceNum %>
                        </td>
                        <td>
                            <%= e.placeSend %>
                        </td>
                        <td>
                            <%= e.dates %>
                        </td>
                        <td>
                            <%= (e.price* e.quantity)%>
                        </td>
                        <% if(user.position!=="آمر لیلیه" ){ %>
                        <td>
                            <a href="/goods-management/show-oneExits/<%=e._id %>" id="show_student">
                                <span class="fa fa-eye"></span>
                            </a>
                        </td>
                        <%}%>                       
    
                    </tr>
                    <% } %>
                        </tbody>
            </table>
        </div>


        <% }else{ %>
        <div class="m-2">
            <h2 class="center">در حال حاضر هیج جنس در اخراجات ثبت نشد</h2>
        </div>
        <% } %>
    </div>
</div>