<!-- Content -->
<div class="content-area py-1">
	<div class="container-fluid">

		<div class="box box-block bg-white">
			<h5 style="text-align: center;">اضافه کردن ماده غذایی جدید به دیپو</h5>
			<br>
			<form action="/feed-management/add-ingradient-to-stock" method="POST">
				<br>
				<div class="form-group row
				<% if(typeof errors!== undefined){
                    errors.forEach(error=>{
                        if(error.name==='ingradient'){%>
                            has-danger
                    <%} }) } %>
				">
					<div class="col-xs-3"></div>
					<div class="col-xs-6">
						<label for="example-text-input1" class="col-xs-3 col-form-label">نام ماده غذایی</label>
						<div class="col-xs-9">
							<input class="form-control" type="text" name="ingradient" value="" id="example-text-input1"
								placeholder="نام ماده غذایی">
							<% if(typeof errors!==undefined){ errors.forEach(error=>{
								if(error.name==='ingradient'){%>
							<div class="form-control-feedback">
								<%= error.message %>
							</div>
							<%} }) } %>
						</div>
					</div>
					<div class="col-xs-3"></div>
				</div>
				<div class="form-group row
				<% if(typeof errors!== undefined){
                    errors.forEach(error=>{
                        if(error.name==='description'){%>
                            has-danger
                    <%} }) } %>
				">
					<div class="col-xs-3"></div>
					<div class="col-xs-6">
						<label for="example-text-input4" class=" col-xs-3 col-form-label">توضیحات</label>
						<div class="col-xs-9">
							<textarea id="textarea" name="description" class="form-control" maxlength="300" rows="5"
								placeholder="توضیحات ..."></textarea>
							<% if(typeof errors!==undefined){ errors.forEach(error=>{
								if(error.name==='description'){%>
							<div class="form-control-feedback">
								<%= error.message %>
							</div>
							<%} }) } %>
						</div>
					</div>
					<div class="col-xs-3"></div>
				</div>
				<hr>
				<div class="form-group row">
					<div class="col-xs-3"></div>
					<div class="col-xs-6">
						<label for="example-number-input" class="col-xs-3 col-form-label">ذخیره کردن</label>
						<div class="col-xs-9">
							<button type="submit" class="btn btn-primary">ذخیره</button>
						</div>
					</div>
					<div class="col-xs-3"></div>
				</div>
			</form>
		</div>
	</div>
</div>