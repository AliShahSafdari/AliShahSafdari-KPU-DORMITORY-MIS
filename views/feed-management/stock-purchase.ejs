<div class="content-area py-1">
	<div class="container-fluid">
		<h4>ادخالات به دیپو</h4>
		<ol class="breadcrumb no-bg mb-1">
			<li class="breadcrumb-item"><a href="/index">مدیریت ارتزاقی</a></li>
			<li class="breadcrumb-item active">ادخالات به دیپو</li>
		</ol>

		<div class="box box-block bg-white">
			<h5 style="text-align: center;">ادخالات به دیپو</h5>
			<br>
			<% if(typeof errors !== 'undefined') { %>
			<%	errors.forEach((element) => { %>
			<%= element.message %>
			<% }); %>
			<% } %>
			<br>
			<form action="/feed-management/stock-purchase" method="POST">
				<input type="hidden" value="stock" name="ingradientType">
				<br>
				<div class="form-group row">
					<label for="example-text-input1" class="col-md-1 col-form-label">نمبر مکتوب</label>
					<div class="col-md-3">
						<input class="form-control" type="text" placeholder="87234jk43j" name="docNumber">
					</div>
					<label for="example-text-input4" class="col-md-1 col-form-label">تاریخ</label>
					<div class="col-md-3">
						<input type="date" class="form-control" name="date">
					</div>
					<label for="example-text-input1" class="col-md-1 col-form-label">اخذ شده از</label>
					<div class="col-md-3">
						<input class="form-control" type="text" placeholder="سیلوی مرکزی" name="from">
					</div>
				</div>
				<div class="form-group row">
					<label for="example-text-input3" class="col-md-1 col-form-label">نام جنس</label>
					<div class="col-md-3">
						<select name="ingradient" class="form-control">
							<option value="" class="active">انتخاب ماده غذایی</option>
							<% ingradients.forEach(element => { %>
							<option value="<%= element.id %>"><%= element.ingradient %></option>
							<% }); %>
						</select>
					</div>
					<label for="example-text-input4" class="col-md-1 col-form-label">مقدار (کیلو گرام)</label>
					<div class="col-md-3">
						<input class="form-control" type="number" step="any" placeholder="100Kgr" name="amount">
					</div>
					<label for="example-text-input5" class="col-md-1 col-form-label">قیمت فیات (افغانی)</label>
					<div class="col-md-3">
						<input class="form-control" type="number" step="any" placeholder="100/Kgr" name="price">
					</div>
				</div>
				<div class="form-group row">
					<label for="example-text-input4" class="col-md-1 col-form-label">توضیحات</label>
					<div class="col-md-7">
						<textarea id="textarea" class="form-control" maxlength="300" rows="5"
							placeholder="This textarea has a limit of 225 chars." name="description"></textarea>
					</div>
				</div>
				<div class="form-group row">
					<label for="example-number-input" class="col-md-1 col-form-label">ذخیره کردن</label>
					<div class="col-md-11">
						<button type="submit" class="btn btn-primary">ذخیره</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>