<!-- Content -->
<div class="content-area py-1">
    <div class="container-fluid">



        <div class="box box-block bg-white">
            <h4 style="text-align: center;">ترتیب اعاشه صبح، چاشت و شب</h4>
            <br>
            <form action="/feed-management/add-new-menu" method="POST" class="third" id="mainform" name="mainform">
                <div class="form-group row">
                    <label for="example-text-input1" class="col-xs-1 col-form-label">نام تابلو</label>
                </div>
                <div class="form-group row
				<% if(typeof errors!== undefined){
                    errors.forEach(error=>{
                        if(error.name==='menuType'){%>
                            has-danger
                    <%} }) } %>
				">
                    <div class="col-xs-2">
                        <input class="form-control" type="text" value="" id="example-text-input1" name="menuType"
                            placeholder="(الف)" autocomplete="off">
                        <% if(typeof errors!==undefined){ errors.forEach(error=>{
							if(error.name==='menuType'){%>
