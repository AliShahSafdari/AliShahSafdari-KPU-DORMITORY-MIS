<body class="img-cover" style=" background-color:white;">

	<div class="container-fluid">
		<div class="sign-form">
			<div class="row">
				<div class="col-md-4 offset-md-4 px-3">
					<div class="box b-a-0" style="border-radius: 1%;">
						<div class="p-2 text-xs-center">
							<div class="mb-2"><img src="img/kpu_0.png" title="" style="width: 130px;"></div>
							<h5>پوهنتون پولی تخنیک کابل</h5>
							<h5>سیستم مدیریت اطلاعات لیلیه</h5>
						</div>
						<form action="" method="post"  id="f" class="<% if(typeof errors!== undefined){
							errors.forEach(error=>{
								if(error.name==='not-exist'){%>
									has-danger
							<%} }) } %>">
							<div class="form-group" class="">
								<input type="text" class="form-control" id="email" name="email" id="exampleInputUserName"
									placeholder="ایمیل">
									<% if(typeof errors!==undefined){ errors.forEach(error=>{
										if(error.name==='not-exist'){ %>
										<div class="form-control-feedback">
											<%= error.message; %>
										</div>
										<%} }) } %> 
							</div>
							<div class="form-group clearfix">
								<div class="float-xs-right" style="padding-left: 5px;">
									<input type="submit" class=" btn btn-primary" onclick="sendkey()" value="ریست با کلمه کلیدی">
								</div>
								
								<div class="float-xs-left " style="padding-right: 5px;">
									<input type="submit" class="btn btn-primary" onclick="sendemail()" value="ریست با ایمیل">
								</div>
							</div>
						</form>
							<br>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Vendor JS -->
	<script type="text/javascript" src="../vendor/jquery/jquery-1.12.3.min.js"></script>
