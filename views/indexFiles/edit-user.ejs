<!-- Content -->
<div class="content-area py-1">
    <div class="container-fluid">
        <h4>ویرایش کردن اکانت </h4>
        <ol class="breadcrumb no-bg mb-1">
            <li class="breadcrumb-item"><a href="/">خانه</a></li>
            <li class="breadcrumb-item active">آمریت لیلیه</li>
            <li class="breadcrumb-item active">ویرایش کردن اکانت </li>
        </ol>

        <div class="box box-block bg-white">
            <h5 style="text-align: center;">ویرایش کردن اکانت </h5>
            <br>
            <form action="<% if(position ==="آمر لیلیه"){ %> /admin/edit-user/<%= id %> <% } %>
                <% if(position ==="مدیر اداری"){ %> /office-management/edit-account/<%= id %> <% } %>
                
                "  method="POST">
                <br>
                <div class="form-group row
                <% if(typeof errors!== undefined){
                    errors.forEach(error=>{
                        if(error.name==='fullname'){%>
                            has-danger
                    <%} }) } %>
                ">
                    <div class="col-xs-3"></div>
                    <div class="col-xs-6">
                        <label for="example-text-input1" class="col-xs-2 col-form-label">نام کاربری</label>
                        <div class="col-xs-10">
                            <input class="form-control" type="text" placeholder="نام و تخلص" name="fullname"
                                id="example-text-input1" value="<%= fullname%>">
                            <% if(typeof errors!==undefined){ errors.forEach(error=>{
                                if(error.name==='fullname'){%>
                                <div class="form-control-feedback">
                                    <%= error.message %>
                                </div>
                                <%} }) } %>
                        </div>
                    </div>
                    <div class="col-xs-3"></div>
                </div>
                <div class="form-group row
                <% if(typeof errors!== undefined){
                    errors.forEach(error=>{
                        if(error.name==='email'){%>
                            has-danger
                    <%} }) } %>
                ">
                    <div class="col-xs-3"></div>
                    <div class="col-xs-6">
                        <label for="example-text-input1" class="col-xs-2 col-form-label">ایمیل</label>
                        <div class="col-xs-10">
                            <input class="form-control" name="email" type="email" placeholder="waisalizada35@gmail.com"
                                id="example-text-input1" value="<%=email %>">
                            <% if(typeof errors!==undefined){ errors.forEach(error=>{
                                if(error.name==='email'){%>
                                <div class="form-control-feedback">
                                    <%= error.message %>
                                </div>
                                <%} }) } %>
                        </div>
                    </div>
                    <div class="col-xs-3"></div>
                </div>
                <div class="form-group row
                <% if(typeof errors!== undefined){
                    errors.forEach(error=>{
                        if(error.name==='position'){%>
                            has-danger
                    <%} }) } %>
                ">
                   <input type="hidden" value="<%= position %>" name="position">
                   <input type="hidden" value="<%= firstQuestion %>" name="firstQuestion">
                   <input type="hidden" value="<%= secondQuestion %>" name="secondQuestion">
                   <input type="hidden" value="<%= thirdQuestion %>" name="thirdQuestion">
                </div>
                <div class="form-group row
                <% if(typeof errors!== undefined){
                    errors.forEach(error=>{
                        if(error.name==='password'){%>
                            has-danger
                    <%} }) } %>
                ">
                    <div class="col-xs-3"></div>
                    <div class="col-xs-6">
                        <label for="example-text-input2" class="col-xs-2 col-form-label">پسورد</label>
                        <div class="col-xs-10">
                            <input class="form-control" type="password" placeholder="پسورد" name="password"
                                id="example-text-input2">
                            <% if(typeof errors!==undefined){ errors.forEach(error=>{
                                if(error.name==='password'){%>
                                <div class="form-control-feedback">
                                    <%= error.message %>
                                </div>
                                <%} }) } %>
                        </div>
                    </div>
                    <div class="col-xs-3"></div>
                </div>
                <div class="form-group row
                <% if(typeof errors!== undefined){
                    errors.forEach(error=>{
                        if(error.name==='confirmPassword'){%>
                            has-danger
                    <%} }) } %>
                ">
                    <div class="col-xs-3"></div>
                    <div class="col-xs-6">
                        <label for="example-text-input3" class="col-xs-2 col-form-label">تايید پسورد</label>
                        <div class="col-xs-10">
                            <input class="form-control" type="password" name="confirmPassword" placeholder="تکرار پسورد"
                                id="example-text-input3">
                            <% if(typeof errors!==undefined){ errors.forEach(error=>{
                                if(error.name==='confirmPassword'){%>
                                <div class="form-control-feedback">
                                    <%= error.message %>
                                </div>
                                <%} }) } %>
                        </div>
                    </div>
                    <div class="col-xs-3"></div>
                </div>

                <div class="form-group row ">
                    <div class="col-xs-3"></div>
                    <div class="col-xs-6">
                        <hr>
                        <label for="example-number-input" class="col-xs-2 col-form-label">تايید و ارسال</label>
                        <div class="col-xs-10">
                            <button type="submit" class="btn btn-primary">ویرایش کردن کاربر</button>
                        </div>
                    </div>
                    <div class="col-xs-3"></div>
                </div>
            </form>
        </div>
    </div>
</div>